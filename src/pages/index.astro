---
import Layout from "../layouts/Layout.astro";
import EventsAccordion from "../components/EventsAccordion.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Austyn Mair society">
  <Navbar />
  <main
    class="mx-auto p-4 max-w-screen-md text-white text-base leading-relaxed flex flex-col min-h-screen"
  >
    <h1
      class="text-4xl font-bold leading-tight text-center mb-4 text-transparent bg-clip-text bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500"
    >
      Austyn Mair society
    </h1>
    <div class="flex justify-center">
      <p class="prose text-center align-center">
        Welcome to Downing College's engineering society! Here you can find
        upcoming events, sponsors, study resources and more.
      </p>
    </div>
    <h2
      class="text-2xl font-bold leading-tight text-left mb-0 mt-10 text-transparent bg-clip-text bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500"
    >
      Upcoming events
    </h2>
    <div class="divider"></div>
    <EventsAccordion />
  </main>
  <Footer />
</Layout>
